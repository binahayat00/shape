{% extends 'base.html.twig' %}

{% block title %}This is shapes!{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/styles.css') }}" rel="stylesheet"/>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Shapes! </h1>

    <article class="l-design-widht">
  <div class="card">
    <form action="javascript:void(0);">
    <h2><svg class="icon" aria-hidden="true">
    </svg>Triangle</h2>
      <input class="input__field" type="text" placeholder="side1" id="side1" required/><br>
      <input class="input__field" type="text" placeholder="side2" id="side2" required/><br>
      <input class="input__field" type="text" placeholder="side3" id="side3" required/><br>
    <div class="button-group" id="triangle-submit">
      <button type="submit">Send</button><br>
    </div>
    <div>
    <label class="input">
      <input class="input__field" id="triangle-type" type="text" placeholder="" disabled/>
      <span class="input__label">type</span><br>
    </label>
    <label class="input">
      <input class="input__field" id="triangle-diameter" type="text" placeholder="" disabled/>
      <span class="input__label">diameter</span><br>
    </label>
    <label class="input">
      <input class="input__field" id="triangle-surface" type="text" placeholder="" disabled/>
      <span class="input__label">surface</span><br>
    </label>
    </div>
    </form>
  </div>
  

    <div class="card card--accent">
    <form action="javascript:void(0);">
    <h2><svg class="icon" aria-hidden="true">
    </svg>Circle</h2>
    <label class="input">
      <input class="input__field" type="text" placeholder="radius" id="radius" required/>
    </label>
    
    <div class="button-group">
      <button id="circle-submit">Send</button><br>
    </div>
    <div>
    <label class="input">
      <input class="input__field" id="circle-type" type="text" placeholder="" disabled/>
      <span class="input__label">type</span><br>
    </label>
    <label class="input">
      <input class="input__field" id="circle-diameter" type="text" placeholder="" disabled/>
      <span class="input__label">diameter</span><br>
    </label>
    <label class="input">
      <input class="input__field" id="circle-surface" type="text" placeholder="" disabled/>
      <span class="input__label">surface</span><br>
    </label>
    </div>
    </form>
  </div>

</article>

